<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:padding="16dp">    <ProgressBar        android:id="@+id/progressBar"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerInParent="true"        android:visibility="gone"/> <!-- Hide initially -->    <Button        android:id="@+id/installButton"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Install"        android:layout_marginTop="20dp"        android:layout_alignParentTop="true"/>    <Button        android:id="@+id/textEditorButton"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Text Editor"        android:layout_below="@id/installButton"        android:layout_marginTop="10dp"/>    <Button        android:id="@+id/startNodeJsServerButton"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Start Node JS Server"        android:layout_below="@id/installButton"        android:layout_marginTop="10dp"/>                    <Button        android:id="@+id/appHomeHtmlLoader"                android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="App Home"        android:layout_below="@id/installButton"        android:layout_marginTop="10dp"/>            <Button        android:id="@+id/closeButton"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Close"        android:layout_below="@id/textEditorButton"        android:layout_marginTop="10dp"/></RelativeLayout>